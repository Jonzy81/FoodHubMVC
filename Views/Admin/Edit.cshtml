@model MenuItemViewModel

<h2>Edit Menu Item</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MenuId">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="MenuName" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea class="form-control" asp-for="Description" required></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Price</label>
        <input type="number" class="form-control" asp-for="Price" required>
    </div>
    <button type="submit" class="btn btn-primary">Update Item</button>
</form>

